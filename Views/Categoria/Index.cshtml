@model IEnumerable<sistemaFinanceiro.Models.CategoriaModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Painel de Categorias</h1>

<p>
    <a asp-action="Create" class="btn btn-success">+ Categorias</a>
</p>
<table id="Categoria" class="table">
    <thead>
        <tr>
            <th>
                Categoria
            </th>
            <th>
                Tipo
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>

    <tbody >

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IconeComNome)
                </td>
                <td>
                    @if (item.Tipo == "Renda")
                    {
                        <span class="bg-success d-block rounded-2 text-center text-white">@item.Tipo</span>
                    }
                    else
                    {
                        <span class="bg-danger d-block rounded-2 text-center text-white">@item.Tipo</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>